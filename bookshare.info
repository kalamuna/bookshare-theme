name = 'bookshare'
description = 'A Kalatheme sub theme powered by Twitter Bootstrap & Science.'
base theme = 'kalatheme'
core = '7.x'

; ========================================
; Regions
; ========================================

regions[content] = 'Content'

; ========================================
; Stylesheets
; ========================================

stylesheets[all][0] = 'dist/css/bookshare.min.css'

; ========================================
; Scripts
; ========================================

scripts[0] = 'dist/js/bookshare.pkg.min.js'

; ========================================
; Settings
; ========================================
settings[a11ytoolbar] = '1'
settings[toggle_logo] = '1'
settings[toggle_name] = '1'
settings[toggle_slogan] = '1'
settings[toggle_node_user_picture] = '0'
settings[toggle_comment_user_picture] = '0'
settings[toggle_comment_user_verification] = '0'
settings[toggle_favicon] = '1'
settings[toggle_main_menu] = '1'
settings[toggle_secondary_menu] = '1'
settings[default_logo] = '0'
settings[logo_path] = 'public://logo.png'
settings[logo_upload] = ''
settings[default_favicon] = '0'
settings[favicon_path] = 'public://favicon_0.ico'
settings[favicon_upload] = ''
settings[bootstrap_library] = 'none'
settings[fontawesome] = '1'
settings[bootstrap_upload] = ''
settings[build_subtheme] = '0'
settings[magic] = '1'
settings[subtheme_name] = ''
settings[subtheme_base] = 'kalatheme'
settings[always_show_page_title] = '1'
settings[responsive_toggle] = '1'
settings[pane_styles_toggle] = '1'
settings[magic_embedded_mqs] = '1'
settings[magic_css_excludes] = ''
settings[magic_footer_js] = '1'
settings[magic_library_head] = '0'
